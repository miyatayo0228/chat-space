.side

  .side-header

    .header-box
      %h3.header-box__user
        = current_user.name

      %ul.header-box__icon
        %li.list
          = link_to new_group_path do
            %i.fa.fa-edit.header-items__icons--pen
        %li.list
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog.header-items__icons--cog

  .side-main

    .side-main__first
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message